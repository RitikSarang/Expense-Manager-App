<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    app:cardCornerRadius="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="false">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cardViewBG"
        app:cardCornerRadius="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="false"
        app:strokeColor="#cccccc"
        app:strokeWidth="0.5dp"/>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="false"
        app:contentPadding="10dp"
        app:strokeColor="#cccccc"
        app:strokeWidth="1dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="9dp"
        android:translationZ="90dp">


        <TextView
            android:id="@+id/txtMonth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="JUNE"
            android:textSize="16sp"
            android:translationZ="90dp"
            app:layout_constraintEnd_toStartOf="@+id/txtErrorText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtErrorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="BUDGET EXCEEDED"
            android:textColor="#DC3515"
            android:textSize="14sp"
            android:textStyle="bold"
            android:translationZ="90dp"
            app:drawableStartCompat="@drawable/ic_error"
            app:layout_constraintBottom_toBottomOf="@+id/txtMonth"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txtMonth" />

        <TextView
            android:id="@+id/txtItem1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:text="Item 1"
            android:translationZ="90dp"
            app:layout_constraintEnd_toStartOf="@+id/txtErrorText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtMonth" />

        <TextView
            android:id="@+id/txtItem2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="Item 1"
            android:translationZ="90dp"
            app:layout_constraintEnd_toStartOf="@+id/txtErrorText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtItem1" />

        <TextView
            android:id="@+id/txtItem3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="Item 1"
            android:translationZ="90dp"
            app:layout_constraintEnd_toStartOf="@+id/txtErrorText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtItem2" />

        <TextView
            android:id="@+id/txtItem1Expense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="+200"
            android:layout_marginEnd="20dp"
            android:textColor="@color/green"
            android:translationZ="90dp"
            app:layout_constraintBottom_toBottomOf="@id/txtItem1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/txtItem1" />

        <TextView
            android:id="@+id/txtItem2Expense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="-100"
            android:textColor="@color/red"
            android:translationZ="90dp"
            app:layout_constraintEnd_toEndOf="@+id/txtItem1Expense"
            app:layout_constraintTop_toBottomOf="@id/txtItem1Expense" />

        <TextView
            android:id="@+id/txtItem3Expense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="+500"
            android:textColor="@color/green"
            android:translationZ="90dp"
            app:layout_constraintEnd_toEndOf="@+id/txtItem2Expense"
            app:layout_constraintTop_toBottomOf="@id/txtItem2Expense" />

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            android:background="#A6A6A6"
            android:translationZ="90dp"
            app:layout_constraintTop_toBottomOf="@id/txtItem3" />

        <TextView
            android:id="@+id/txtViewAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="15dp"
            android:text="VIEW ALL"
            android:textColor="#039BE5"
            android:textSize="15sp"
            android:translationZ="90dp"
            app:drawableEndCompat="@drawable/ic_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_line" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>